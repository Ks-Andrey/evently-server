{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@common/*": ["src/common/*"],
            "@domain/*": ["src/domain/*"],
            "@application/*": ["src/application/*"],
            "@api/*": ["src/api/*"],
            "@infrastructure/*": ["src/infrastructure/*"],
            "@prisma/*": ["generated/prisma/*"]
        },
        "rootDirs": ["src", "generated"],
        "outDir": "./dist",
        "target": "es2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "exclude": ["prisma/*"]
}
